{
  "name": "@chemmangat/optimistic-update",
  "version": "1.0.0",
  "description": "Extraordinary React hooks for optimistic UI updates with automatic rollback",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "hooks",
    "optimistic",
    "ui",
    "state",
    "rollback",
    "mutations",
    "optimistic-updates",
    "typescript"
  ],
  "author": "Chemmangat",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chemmangat/optimistic-update.git"
  },
  "homepage": "https://github.com/chemmangat/optimistic-update#readme",
  "bugs": {
    "url": "https://github.com/chemmangat/optimistic-update/issues"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
